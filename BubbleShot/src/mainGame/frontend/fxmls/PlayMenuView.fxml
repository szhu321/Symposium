<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane fx:id="container" prefHeight="400.0" prefWidth="693.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainGame.frontend.fxmls.PlayMenuController">
   <center>
      <HBox prefHeight="500.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <VBox>
               <children>
                  <Label text="Pick Character">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <ScrollPane fx:id="scrollPaneContainer"  prefHeight="${container.height}" prefWidth="200">
                     <content>
                        <VBox fx:id="playerPickerRow" spacing="30.0" />
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            <GridPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="410.0" minWidth="10.0" prefWidth="410.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="3" />
                  <Button mnemonicParsing="false" onMouseClicked="#startBtnOnclick" text="Start" GridPane.rowIndex="4" />
                  <Button mnemonicParsing="false" onMouseClicked="#backBtnOnclick" text="Back" GridPane.rowIndex="5" />
                  <Button mnemonicParsing="false" onMouseClicked="#createCharacterBtnOnclick" text="New Character" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Click on a character before starting a game." wrappingWidth="176.0" GridPane.rowIndex="2">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
               </children>
            </GridPane>
         </children>
      </HBox>
   </center>
</BorderPane>
